<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:orientation="horizontal">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancelBtn"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="?cancelBtnColor"
        android:text="@string/cancel_btn"
        android:textColor="?cancelBtnTextColor"
        android:textSize="?dialogBtnTextSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="?dialogBtnDimenRatio"
        app:layout_constraintEnd_toStartOf="@id/confirmBtn"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="?dialogBtnWidthPercent"
        app:rippleColor="#80ffffff">

    </com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/confirmBtn"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="?confirmBtnColor"
        android:text="@string/confirm_btn"
        android:textColor="?confirmBtnTextColor"
        android:textSize="?dialogBtnTextSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="?dialogBtnDimenRatio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cancelBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="?dialogBtnWidthPercent"
        app:rippleColor="#80ffffff">

    </com.google.android.material.button.MaterialButton>

</androidx.constraintlayout.widget.ConstraintLayout>
